{
  "name": "kover-report-action",
  "version": "1.0.0",
  "description": "coverage report action for Kover",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js -o dist --source-map --license licenses.txt",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "package": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "all": "pnpm run format && pnpm run lint && pnpm run build"
  },
  "keywords": [
    "github-action",
    "coverage",
    "kover",
    "kotlin",
    "testing"
  ],
  "author": "yshrsmz",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/artifact": "^2.3.2",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "fast-xml-parser": "^5.3.0",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^24.7.2",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
