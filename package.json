{
  "name": "kover-report-action",
  "version": "1.0.0",
  "description": "coverage report action for Kover",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js -o dist --source-map --license licenses.txt",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "package": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "all": "pnpm run format && pnpm run lint && pnpm run build",
    "prepare": "lefthook install"
  },
  "keywords": [
    "github-action",
    "coverage",
    "kover",
    "kotlin",
    "testing"
  ],
  "author": "yshrsmz",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/artifact": "5.0.2",
    "@actions/core": "2.0.2",
    "@actions/exec": "2.0.0",
    "@actions/github": "7.0.0",
    "@actions/tool-cache": "2.0.2",
    "fast-xml-parser": "5.3.3",
    "glob": "13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@types/node": "24.10.9",
    "@vercel/ncc": "0.38.4",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "lefthook": "2.0.15",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
